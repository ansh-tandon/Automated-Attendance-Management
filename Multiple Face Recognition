import face_recognition
import cv2
cm = cv2.VideoCapture(0)
c, f = cm.read()
import numpy as np
import face_recognition

# Load the known faces and their names
known_faces = []
known_names = []

# Add known faces and their names to the lists
img1 = face_recognition.load_image_file("data\RA2111026010148.jpeg")
enc1 = face_recognition.face_encodings(img1)[0]
known_faces.append(enc1)
known_names.append("Mohammed Javidh")

img2 = face_recognition.load_image_file("data\RA2111026010176.jpeg")
enc2 = face_recognition.face_encodings(img2)[0]
known_faces.append(enc2)
known_names.append("Ansh Tandon")

# Initialize the webcam
cap = cv2.VideoCapture(0)

while True:
    # Read a frame from the webcam
    ret, frame = cap.read()

    # Find all the faces and their encodings in the current frame
    face_locations = face_recognition.face_locations(frame)
    face_encodings = face_recognition.face_encodings(frame, face_locations)

    # Loop through each face in this frame of video
    for (top, right, bottom, left), face_encoding in zip(face_locations, face_encodings):
        # See if the face is a match for the known faces
        matches = face_recognition.compare_faces(known_faces, face_encoding)

        # If there is a match, use the name of that person
        name = "Unknown"
        if True in matches:
            match_index = matches.index(True)
            name = known_names[match_index]

        # Draw a box around the face
        cv2.rectangle(frame, (left, top), (right, bottom), (0, 0, 255), 2)

        # Draw a label with a name below the face
        cv2.rectangle(frame, (left, bottom - 35), (right, bottom), (0, 0, 255), cv2.FILLED)
        font = cv2.FONT_HERSHEY_DUPLEX
        cv2.putText(frame, name, (left + 6, bottom - 6), font, 1.0, (255, 255, 255), 1)

    # Display the resulting image
    cv2.imshow('Video', frame)

    # Exit the program if the 'q' key is pressed
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Release the webcam and close the window
cap.release()
cv2.destroyAllWindows()
